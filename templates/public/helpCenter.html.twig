{% extends 'base.html.twig' %}

{% block title %} Cente d'aide - Emploi Espoir {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <header>
        {% include 'navbar.html.twig' %}
    </header>


    <h1>Centre d'aide</h1>

    {{ form_start(help_center_form) }}
        <div>

            <div>
                {{ form_label(help_center_form.lastName) }}<br>
                {{ form_widget(help_center_form.lastName) }}
                {{ form_errors(help_center_form.lastName) }}
            </div>

            <div>
                {{ form_label(help_center_form.firstName) }}<br>
                {{ form_widget(help_center_form.firstName) }}
                {{ form_errors(help_center_form.firstName) }}
            </div>

            <div>
                {{ form_label(help_center_form.email) }}<br>
                {{ form_widget(help_center_form.email) }}
                {{ form_errors(help_center_form.email) }}
            </div>

            <div>
                {{ form_label(help_center_form.phone) }}<br>
                {{ form_widget(help_center_form.phone) }}
                {{ form_errors(help_center_form.phone) }}
            </div>

            <div>
                {{ form_label(help_center_form.description) }}<br>
                {{ form_widget(help_center_form.description) }}
                {{ form_errors(help_center_form.description) }}
            </div>

            <div>
                {{ form_label(help_center_form.screenshot) }}<br>
                {{ form_widget(help_center_form.screenshot) }}
                {{ form_errors(help_center_form.screenshot) }}
            </div>

            <button type="submit">Envoyer</button>
        </div>
    {{ form_end(help_center_form) }}
{% endblock %}
