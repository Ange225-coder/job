{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur votre espace employeur - Emploi Espoir{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/hidingFlashMsg/hideFlashMsg.js') }}" defer></script>
    <script src="{{ asset('js/user/employability/organizationManager/modalForPremium.js') }}" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}

{% block body %}
    {# message if a job offer has been added succesfully #}
    {% if app.flashes('add_job_offer_success') is defined %}
        {% for addJobOfferMsg in app.flashes('add_job_offer_success') %}
            <span id="hide-flashMsg">{{ addJobOfferMsg }}</span>
        {% endfor %}
    {% endif %}


    {# premium message #}
    {% if app.flashes('premium_message') is defined %}
        {% for premiumMsg in app.flashes('premium_message') %}
            <span id="modal-for-premium" style="display: none">{{ premiumMsg }}</span>
        {% endfor %}
    {% endif %}


    <header>
        {% include 'navbar.html.twig' %}
    </header>


    <h2>
        {{ organization.organizationName }} | <span>{{ organization.subscription }}</span>
    </h2>


    {# this block will be side during style #}
    <div>
        <a href="{{ path('organization_dashboard_preview', {'id' : organization.id}) }}">Aperçu</a><br>
        <a href="{{ path('organization_specifics_profils_list') }}">Profils spécifiques</a><br>
        <a href="{{ path('organization_add_job_offer') }}">Émettre une offre</a><br>
        <a href="{{ path('organization_my_offers', {'id' : organization.id}) }}">Mes offres et candidatures</a>
    </div>

    <section>
        <h1>Bienvenue sur votre espace employeur</h1>
    </section>
{% endblock %}