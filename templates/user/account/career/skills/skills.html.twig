{% extends 'base.html.twig' %}

{% block title %}Compétences - Emploi Espoir{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/hidingFlashMsg/hideFlashMsg.js') }}" defer></script>
{% endblock %}

{% block body %}
    {# message if a skills has been change #}
    {% if app.flashes('skill_saved') is defined %}
        {% for skillsSavedMsg in app.flashes('skill_saved') %}
            <span id="hide-flashMsg">{{ skillsSavedMsg }}</span>
        {% endfor %}
    {% endif %}

    <header>
        {% include 'navbar.html.twig' %}
    </header>

    <a href="{{ path('account') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <section>
        <h1>Compétences</h1>

        <div>
            <a href="{{ path('account_skills_manager') }}">
                <strong>Compétences principales : </strong>
                <span>
                    {% if career is not null and career.skills is not null %}
                        {% for careerSkills in career.skills %}
                            {{ careerSkills }},
                        {% endfor %}
                    {% else %}
                        <em>Informations non fournie</em>
                    {% endif %}
                </span>
            </a>
        </div>
    </section>
{% endblock %}






























