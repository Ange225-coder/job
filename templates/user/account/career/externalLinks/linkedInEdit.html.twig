{% extends 'base.html.twig' %}

{% block title %}Liens externes - Emploi Espoir{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/user/account/career/externalLinks/wordsCounter.js') }}" defer></script>
{% endblock %}

{% block body %}

    <header>
        {% include('navbar.html.twig') %}
    </header>

    <p>
        <a href="{{ path('account_external_links') }}">
            <i class="bi bi-arrow-left"></i>
        </a>
    </p>

    <h1>Liens externes</h1>

    {{ form_start(linkedInUrlEditForm) }}
        <div>
            {{ form_label(linkedInUrlEditForm.linkedInUrl) }}<br>
            {{ form_widget(linkedInUrlEditForm.linkedInUrl) }}
            {{ form_errors(linkedInUrlEditForm.linkedInUrl) }}
            {{ form_help(linkedInUrlEditForm.linkedInUrl) }}

             <p>
                 <span class="words-counter">
                     
                 </span>
             </p>
        </div>

        <button type="submit">Enregistrer</button>
    {{ form_end(linkedInUrlEditForm) }}

{% endblock %}