{% extends 'base.html.twig' %}

{% block title %}Liens externes{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/user/account/career/externalLinks/wordsCounter.js') }}" defer></script>
{% endblock %}

{% block body %}

    <header>
        {% include('navbar.html.twig') %}
    </header>

    <a href="{{ path('account_external_links') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <section>
        <h1>Liens externes</h1>

        {{ form_start(website_url_edit_form) }}
            <div>
                {{ form_label(website_url_edit_form.websiteUrl) }}<br>
                {{ form_widget(website_url_edit_form.websiteUrl) }}
                {{ form_errors(website_url_edit_form.websiteUrl) }}
                {{ form_help(website_url_edit_form.websiteUrl) }}

                <p>
                    <span class="words-counter">

                    </span>
                </p>
            </div>

            <button type="submit">Enregistrer</button>
        {{ form_end(website_url_edit_form) }}
    </section>
{% endblock %}