{% extends 'base.html.twig' %}

{% block title %}Zone de recherche d'emploi - Emploi Espoir{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <header>
        {% include 'navbar.html.twig' %}
    </header>

    <a href="{{ path('account_job_preference') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <section>
        <h1>Emploi</h1>

        {{ form_start(jobAreaForm) }}
            <div>
                {{ form_label(jobAreaForm.jobArea) }}<br >
                {{ form_widget(jobAreaForm.jobArea) }}
                {{ form_errors(jobAreaForm.jobArea) }}
            </div>

            <div>
                <button type="submit">Enregistrer</button>
            </div>
        {{ form_end(jobAreaForm) }}
    </section>
{% endblock %}