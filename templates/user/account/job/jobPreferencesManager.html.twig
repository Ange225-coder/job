{% extends 'base.html.twig' %}

{% block title %}Préférences d'emploi{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <header>
        {% include 'navbar.html.twig' %}
    </header>

    <a href="{{ path('account_job_preference') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <section>
        <h1>Emploi</h1>

        <h2>Préférences relatives au télétravail</h2>

        <div>
            {{ form_start(job_preferences_form) }}
                <div>
                    {{ form_widget(job_preferences_form.jobPreferences) }}
                </div>

                <button type="submit">Enregistrer</button>
            {{ form_end(job_preferences_form) }}
        </div>
    </section>
{% endblock %}