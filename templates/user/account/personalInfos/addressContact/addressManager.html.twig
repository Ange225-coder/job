{% extends 'base.html.twig' %}

{% block title %}Adresse et contact - Emploi Espoir{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <header>
        {% include('navbar.html.twig') %}
    </header>

    <a href="{{ path('account_address_contact') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <section>

        <h1>Adresse</h1>

        {{ form_start(addressForm) }}
            <div>
                {{ form_label(addressForm.address) }}<br >
                {{ form_widget(addressForm.address) }}
                {{ form_errors(addressForm.address) }}
            </div>

            <button type="submit">Enregistrer</button>
        {{ form_end(addressForm) }}
    </section>
{% endblock %}