{% extends 'base.html.twig' %}

{% block title %}Identité - Emploi Espoir {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <header>
        {% include('navbar.html.twig') %}
    </header>

    <a href="{{ path('account_identity') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <div>
        <h1>Identité</h1>

        {{ form_start(last_first_name_form) }}

            <div>
                {{ form_label(last_first_name_form.firstName) }}<br>
                {{ form_widget(last_first_name_form.firstName) }}
                {{ form_errors(last_first_name_form.firstName) }}
            </div>

            <div>
                {{ form_label(last_first_name_form.lastName) }}<br>
                {{ form_widget(last_first_name_form.lastName) }}
                {{ form_errors(last_first_name_form.lastName) }}
            </div>

            <div>
                <button type="submit">Enregistrer</button>
            </div>

        {{ form_end(last_first_name_form) }}
    </div>
{% endblock %}