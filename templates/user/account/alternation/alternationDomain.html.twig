{% extends 'base.html.twig' %}

{% block title %}Alternance - Emploi Espoir{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="{{ asset('js/user/account/alternation/selectTagForAlternationDomain.js') }}" defer></script>
{% endblock %}

{% block body %}

    <header>
        {% include('navbar.html.twig') %}
    </header>

    <h1>Alternance</h1>

    {{ form_start(alternation_domain_form) }}
        <div>
            {{ form_label(alternation_domain_form.alternationDomain) }}<br>
            {{ form_widget(alternation_domain_form.alternationDomain) }}
            {{ form_errors(alternation_domain_form.alternationDomain) }}
        </div>

        <button type="submit">Enregistrer</button>
    {{ form_end(alternation_domain_form) }}
{% endblock %}