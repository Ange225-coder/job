{% extends 'base.html.twig' %}

{% block title %}Alternance - Emploi Espoir{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <header>
        {% include('navbar.html.twig') %}
    </header>

    <a href="{{ path('account_alternation_preferences') }}">
        <i class="bi bi-arrow-left"></i>
    </a>

    <h1>Alternance</h1>

    {{ form_start(alternation_zone_form) }}
        <div>
            {{ form_label(alternation_zone_form.alternationZone) }}<br >
            {{ form_widget(alternation_zone_form.alternationZone) }}
            {{ form_errors(alternation_zone_form.alternationZone) }}
        </div>

        <button type="submit">Enregistrer</button>
    {{ form_end(alternation_zone_form) }}
{% endblock %}