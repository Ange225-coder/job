{% extends 'base.html.twig' %}

{% block title %}Profil - Emploi Espoir{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/user/profilViewAsRecruiter/redirectToModal.js') }}" defer></script>
{% endblock %}

{% block body %}

    <section>
        <div>
            <h1>Votre profil vu par un employeur</h1>
        </div>

        <div>
            <p>
                <img src="{{ asset('user/profile/avatar/' ~ app.user.profilPic) }}" alt="Emploi_Espoir_profil_pic" width="200"><br>
                <a href="{{ path('user_profile_avatar_edit') }}">Modifier</a>
            </p>
        </div>


        <div>
            <h1>{{ app.user.firstName }} {{ app.user.lastName }}</h1>

            <p>{{ app.user.email }}</p>
            {% if app.user.phone is not null %}
                <p>{{ app.user.phone }}</p>
            {% else %}
                <p>
                    <em>Information non fournie</em>
                </p>
            {% endif %}
        </div>


        <div>
            {# employement area #}
            {% if app.user.jobAndAlternation.employmentArea is not null %}
                <p>
                    <a href="{{ path('account_job_preference_search_area') }}">
                        {{ app.user.jobAndAlternation.employmentArea }}
                    </a>
                </p>
            {% else %}
                <a href="{{ path('account_job_preference_search_area') }}">
                    <em>Information non fournie</em>
                </a>
            {% endif %}
        </div>
    </section>


    <!-- Modal structure -->
    <div id="employmentAreaModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span id="closeModal" class="close">&times;</span>
            <h2>Employment Area Details</h2>
            <p id="modalContent"></p>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    </style>
{% endblock %}